{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es2020",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "coverage",
    "examples",
    "dist",
    "dist-es",
    "node_modules",
    "src/tests"
  ]
}
